<%- include("./partials/header") %>

<h1 style="text-align: center;">Download Instagram Images of any person!</h1>

<div class="container"> 
	<div class="row">
		<div style="width: 30%; margin: 25px auto; ">
			<form action="/" method="POST">
				<div class="form-group">
				    <input class="form-control" type="text" placeholder="Your Username" name="username1" required="true">
				</div>

				<div class="form-group">
				    <input class="form-control" type="password" placeholder="Your Password" name="password" required="true">
				</div>

				<div class="form-group">
				    <input class="form-control" type="text" placeholder="Other Person's Username" name="username2" required="true">
				</div>

				<div class="form-group">
					<input class="form-control" type="number" name="count_images" placeholder="Number of Images" step="1">
				</div>

				<div class="form-group">
					    <button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
		</div>
	</div>
</div>

<%- include("./partials/footer") %>
